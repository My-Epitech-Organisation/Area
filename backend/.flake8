# flake8 configuration for Django AREA project
# Comments explain Django-specific exclusions:
# - E402 in settings.py: load_dotenv() before Django imports is OK
# - F401 in admin/tests/views.py: Django default imports OK if unused

[flake8]
max-line-length = 88
extend-ignore = E203,W503
per-file-ignores =
    */settings.py:E402
    */admin.py:F401
    */tests.py:F401
    */views.py:F401
exclude =
    migrations,
    venv,
    __pycache__,
    .mypy_cache,
    reports