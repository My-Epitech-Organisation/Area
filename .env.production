# ============================================================================
# AREA Project - Production Environment Template
# ============================================================================
# This file contains production-ready defaults
# Copy to .env and customize for your production deployment
# ============================================================================

# ============================================================================
# 1. DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DB_USER=area_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=area_db
DB_HOST=db
DB_PORT=5432

# ============================================================================
# 2. REDIS CONFIGURATION
# ============================================================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ============================================================================
# 3. DJANGO BACKEND CONFIGURATION
# ============================================================================
BACKEND_PORT=8080
DJANGO_SETTINGS_MODULE=area_project.settings

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# CRITICAL: Must be False in production!
DEBUG=False

ENVIRONMENT=production

# ============================================================================
# 4. DJANGO SUPERUSER
# ============================================================================
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================================================
# 5. LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=WARNING
DJANGO_LOG_FILE=/app/logs/django.log

# ============================================================================
# 6. JWT AUTHENTICATION
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SIGNING_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# ============================================================================
# 7. EMAIL CONFIGURATION (SMTP)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=CHANGE_ME_APP_PASSWORD
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# 8. FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_PORT=443
FRONTEND_URL=https://yourdomain.com

# CRITICAL: Must point to your production API
VITE_API_BASE=https://yourdomain.com/api

# ============================================================================
# 9. CORS AND SECURITY SETTINGS
# ============================================================================
# Add your production domain(s)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CRITICAL: Must be False in production - configure CORS_ALLOWED_ORIGINS in settings.py
CORS_ALLOW_ALL_ORIGINS=False

# CRITICAL: Must be True in production with HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ============================================================================
# 10. OAUTH2 CONFIGURATION
# ============================================================================

# Google OAuth2
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_SECRET
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/oauth/google/callback/

# GitHub OAuth2
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=CHANGE_ME_GITHUB_SECRET
GITHUB_REDIRECT_URI=https://yourdomain.com/auth/oauth/github/callback/

# ============================================================================
# 11. WEBHOOK SECRETS
# ============================================================================
# Generate with: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET
GMAIL_WEBHOOK_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET
WEBHOOK_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET

# ============================================================================
# 12. CELERY CONFIGURATION
# ============================================================================
CELERY_TIMEZONE=UTC
CELERY_TASK_ALWAYS_EAGER=False

# ============================================================================
# 13. MONITORING (Flower)
# ============================================================================
FLOWER_PORT=5566

# ============================================================================
# 14. DOCKER CONFIGURATION
# ============================================================================
COMPOSE_PROJECT_NAME=area_production

# ============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ============================================================================
# ✅ All CHANGE_ME values replaced with secure credentials
# ✅ SECRET_KEY and JWT_SIGNING_KEY generated with secure random strings
# ✅ DEBUG=False
# ✅ ENVIRONMENT=production
# ✅ SECURE_SSL_REDIRECT=True
# ✅ SESSION_COOKIE_SECURE=True
# ✅ CSRF_COOKIE_SECURE=True
# ✅ CORS_ALLOW_ALL_ORIGINS=False
# ✅ ALLOWED_HOSTS updated with production domain(s)
# ✅ OAuth redirect URIs updated with production URLs
# ✅ VITE_API_BASE points to production API
# ✅ Webhook secrets generated with strong random values
# ✅ SSL/TLS certificates configured
# ✅ Database backups configured
# ✅ Monitoring and logging configured
# ============================================================================
